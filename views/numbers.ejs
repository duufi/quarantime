<%- include("partials/header") %>

<style>
	html, body {
  		height: 100%;
	}	
	h5 {
		text-align: center; 
	}
	.card-text {
		font-size:3vmin;
		text-align: center;
	}
	.card {
		margin-top: 10%;
		margin-bottom: 10%; 
	}
	.jumbotron {
		margin-top: 3%; 
	}	
</style>

	<nav class="navbar navbar-expand navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" style="font-size:5vmin;" href="/">Home</a>
        	<div class="navbar-collapse collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/numbers" style="font-size:5vmin;">Numbers</a>
					</li>
				</ul>
        </div>
    </nav>


 <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4" style="text-align: center;">By The Numbers</h1>
          <p class="lead" style="color:black; text-align: center; font-size:5vmin;">Current COVID-19 Statistics</p>
			<p style="text-align: center; font-size:3vmin;">
				These statistics are automatically updated in response to <a href="https://www.worldometers.info/coronavirus/"> Worldometer </a>
			</p>
        </div>
    </div>

<div class="container">
	<div class='row justify-content-center'>
		<div class="col-lg-4 col-md-6 ml-sm-6 float-left">
			<div class="card" style="width: 18rem;">
		  <img class="card-img-top" src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80" alt="Card image 	 	 	cap">
				<div class="card-body">
					<h5 class="card-title">Globally</h5>
					<p class="card-text"><%= data.deaths %> People Died</p>
					<p class="card-text">This is equivalent to <%= data.deaths / 7700000000 %> % of the global population</p>
				</div>
			</div>
		</div>
			
	
		<div class="col-lg-4 col-md-6 ml-sm-6 float-left">
			<div class="card" style="width: 18rem;">
		  <img class="card-img-top" src="https://images.unsplash.com/photo-1550792436-181701c71f63?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
				<div class="card-body">
					<h5 class="card-title">Globally</h5>
					<p class="card-text"><%= data.cases %> Total Cases</p>
					<p class="card-text">This is equivalent to <%=  data.cases / 7700000000 %> % of the global population</p>
				</div>
			</div>
		</div>
		
		<div class="col-lg-4 col-md-6 ml-sm-6 float-left">
			<div class="card" style="width: 18rem;">
		  <img class="card-img-top" src="https://images.unsplash.com/photo-1452697620382-f6543ead73b5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="Card image 	 	 	cap">
				<div class="card-body">
					<h5 class="card-title">Globally</h5>
					<p class="card-text"><%= data.recovered %> People Recovered</p>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("partials/footer") %>
